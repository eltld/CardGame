<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_menu"
    tools:context=".ChooseGameActivity" >

    <ImageButton
        android:id="@+id/btn_choose_game_tien_len"
        android:background="@color/absolute_transparent"
        android:layout_width="@dimen/width_button_choose_game"
        android:layout_height="@dimen/height_button_choose_game"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/img_content_discription"
        android:src="@drawable/button_play_choose_game"/>
    
    <ImageView
        android:id="@+id/img_choose_game_tien_len"
        android:layout_width="@dimen/width_image_choose_game_tien_len"
        android:layout_height="@dimen/height_image_choose_game_tien_len"
        android:layout_centerHorizontal="true"
        android:src="@drawable/choose_game_tien_len"
        android:contentDescription="@string/img_content_discription"/> 
        
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/btn_choose_game_tien_len"
        android:layout_below="@id/img_choose_game_tien_len"
        android:layout_marginTop="@dimen/margin_top_choose_game"
        android:background="@drawable/background_guide_play_game" >
        
        <TextView
            android:id="@+id/text_view_choose_game_tien_len"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_view_guide_play_game" />
        
    </ScrollView>
        
</RelativeLayout>
